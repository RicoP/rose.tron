        },
        */

        {
            "type": "shell",
            "label": "Rose Announce Start",
            "command": "rose",
            "args": [
                "-broadcastInfo",
                "Start compiling",
            ],
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Parse",
            "command": "rose.parser",
            "args": [
                "-I",
                "world.h",
                "-O",
                "world.serializer.h"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Compile",
            "command": "rose.compile",
            "args": [
                "source/main.cpp",
                "--buildtime",
                "--verbose",
                "--pipe",
                "-o", ".build\\${workspaceFolderBasename}.dll",
            ],
            "options": {
                "cwd": "${fileDirname}\\..",
            },
            "group": {
                "kind": "build",
            },
        },

        {
            "type": "shell",
            "label": "Rose Clean",
            "command": "Remove-Item",
            "args": [
                "*.obj,",
                "*.pdb",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "group": {
                "kind": "build",
            }
        },
        
        {
            "type": "shell",
            "label": "Rose Build",
            "command": "echo",
            "args": [
                "Build Finished",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
                        
            "dependsOrder": "sequence",
            "dependsOn": ["Rose Announce Start", "Rose Parse", "Rose Compile", "Rose Clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}